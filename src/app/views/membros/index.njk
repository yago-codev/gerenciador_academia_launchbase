{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/membros/criar">Criar Novo Membro</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Membro</th>
          <th>Email</th>
          <th>Peso</th>
          <th>Altura</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for membro in membros %}
          <tr>
            <td>
              <span style="background-image: url({{ membro.avatar_url }})"></span>
              {{ membro.nome }}
            </td>
            <td>{{ membro.email }}</td>
            <td>{{ membro.peso }}kg</td>
            <td>{{ membro.altura }}cm</td>
            <td><a href="/membros/{{  membro.id }}">ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}