{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/instrutores?_method=PUT">
    <section class="avatar" style="background: url({{ instrutor.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
      <h3>Editar Instrutor</h3>

      {% include 'instrutores/fields.njk' %}

      <input 
        type="hidden" 
        name="id" 
        value={{instrutor.id}}
      >

    </section>
  </form>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
{% endblock content %}