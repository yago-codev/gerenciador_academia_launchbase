{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Atendimento</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for instrutor in instrutores %}
          <tr>
            <td>{{ instrutor.nome }}</td>
            <td>{{ instrutor.servicos }}</td>
            <td><a href="/instrutores/{{ instrutor.id }}">ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}